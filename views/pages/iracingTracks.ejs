<!-- views/pages/iracingCars.ejs -->
<!DOCTYPE html>
<html lang="en" ng-app="racerApp">
<head>
    <% include ../partials/head %>
</head>

<body class="container" ng-controller="trackListCtrl">
    <div class="wrapper">
        <header>
            <% include ../partials/header %>
        </header>

        <main>
            <div class="filterDiv">
                <label for="searchName">Search by name: </label><input id="searchName" ng-model="search.track_name">
                <label for="searchDefault">Show Default Only:</label> <input id="searchDefault" type="checkbox" ng-model="defaultOnly" ng-click="defaultCheckChange()">
            </div>
            <table class="trackList">
                <tr>
                    <th>Logo</th>
                    <th>Name</th>
                    <th>Is Default Content</th>
                </tr>
                <tr ng-repeat="track in tracks | filter:search">
                    <td><img class="trackLogo" src="/images/trackLogos/{{ track.trackLogoURL }}"/><a href="{{ track.trackWebsiteURL }}">Visit Track Website</a></td>
                    <td>{{ track.track_name }}</td>
                    <td>{{ track.track_isDefaultContent | checkmarkFilter }}</td>
                </tr>
            </table>
        </main>

        <footer>
            <% include ../partials/footer %>
        </footer>
    </div>
</body>
</html>